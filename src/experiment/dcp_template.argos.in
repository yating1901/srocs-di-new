    <!-- distribute free blocks -->
     <distribute>
     <position method="uniform" min="0.6,0.6,0" max="0.8,0.8,0" />
      <orientation method="uniform" min="0,0,0" max="360,0,0" />
      <entity quantity="2" max_trials="100">
        <block id="freeblock0" debug="false">
          <body position="-0,0,0" orientation="0,0,0"/>
          <controller config="block"/>
        </block>
      </entity>
    </distribute>
    <distribute>
     <position method="uniform" min="-0.8,-0.8,0" max="-0.6,-0.6,0" />
      <orientation method="uniform" min="0,0,0" max="360,0,0" />
      <entity quantity="2" max_trials="100">
        <block id="freeblock1" debug="false">
          <body position="-0,0,0" orientation="0,0,0"/>
          <controller config="block"/>
        </block>
      </entity>
    </distribute>
    <distribute>
     <position method="uniform" min="0.6,-0.6,0" max="0.8,-0.4,0" />
      <orientation method="uniform" min="0,0,0" max="360,0,0" />
      <entity quantity="2" max_trials="100">
        <block id="freeblock2" debug="false">
          <body position="-0,0,0" orientation="0,0,0"/>
          <controller config="block"/>
        </block>
      </entity>
    </distribute>
    <distribute>
     <position method="uniform" min="-0.6,0.6,0" max="-0.4,0.8,0" />
      <orientation method="uniform" min="0,0,0" max="360,0,0" />
      <entity quantity="2" max_trials="100">
        <block id="freeblock3" debug="false">
          <body position="-0,0,0" orientation="0,0,0"/>
          <controller config="block"/>
        </block>
      </entity>
    </distribute>
  </arena>

 <!-- ******************* -->
  <!-- * Physics engines * -->
  <!-- ******************* -->
  <physics_engines>
    <dynamics3d id="dyn3d" iterations="25" default_friction="1">
      <gravity g="9.8" />
      <floor friction="1"/>
      <virtual_magnetism disable_block_magnets_during_manipulation="true"/>
    </dynamics3d>
  </physics_engines>

  <!-- ********* -->
  <!-- * Media * -->
  <!-- ********* -->
  <media>
    <directional_led id="directional_leds" index="grid" grid_size="20,20,20"/>
    <tag id="tags" index="grid" grid_size="20,20,20" />
    <radio id="nfc" index="grid" grid_size="20,20,20" />
    <radio id="wifi" index="grid" grid_size="20,20,20" />
  </media>

  <!-- ****************** -->
  <!-- * Visualization * -->
  <!-- ****************** -->
  <visualization>
    <qt-opengl lua_editor="false" show_boundary="false">
      <user_functions library="@CMAKE_BINARY_DIR@/libbuilderbot_qtopengl_user_functions"
                      label="builderbot_qtopengl_user_functions" />
    </qt-opengl>
  </visualization>
  
</argos-configuration>

