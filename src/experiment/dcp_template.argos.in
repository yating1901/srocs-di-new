<?xml version="1.0" ?>
<argos-configuration>

  <!-- ************************* -->
  <!-- * General configuration * -->
  <!-- ************************* -->
  <framework>
    <system threads="0" />
    <experiment length="0" ticks_per_second="5" random_seed="0" />
  </framework>
  <!-- *************** -->
  <!-- * Controllers * -->
  <!-- *************** -->
  <controllers>
    <lua_controller id="builderbot">
      <actuators>
        <builderbot_electromagnet_system implementation="default" />
        <builderbot_differential_drive implementation="default" />
        <builderbot_lift_system implementation="default" />
        <builderbot_nfc implementation="default" />
        <wifi implementation="default" />
        <debug implementation="default">
          <interface id="draw" />
        </debug>
      </actuators>
      <sensors>
        <builderbot_camera_system implementation="default"
          show_frustum="true" show_tag_rays="false" show_led_rays="false" />
        <builderbot_rangefinders implementation="default" show_rays="false" />
        <builderbot_differential_drive implementation="default"/>
        <builderbot_electromagnet_system implementation="default" />
        <builderbot_lift_system implementation="default" />
        <builderbot_nfc implementation="default" show_rays="false" />
        <builderbot_system implementation="default" />
        <wifi implementation="default" />
      </sensors>
      <params script="@CMAKE_BINARY_DIR@/experiment/dcp_builderbot.lua"
          search_random_range="25" />
    </lua_controller>

    <lua_controller id="block">
      <actuators>
        <directional_leds implementation="default" />
        <radios implementation="default"/>
      </actuators>
      <sensors>
        <radios implementation="default" show_rays="true"/>
      </sensors>
      <params script="@CMAKE_BINARY_DIR@/experiment/dcp_block.lua" />
    </lua_controller>
  </controllers>

  <!-- ****************** -->
  <!-- * Loop functions * -->
  <!-- ****************** -->
  <loop_functions library="@CMAKE_BINARY_DIR@/libdi_srocs_loop_functions"
                  label="di_srocs_loop_functions"
                  output_directory=".">
    <condition type = "any" once = "true">
      <condition type = "all">
        <condition type="entity" target="block:" position="-0.055,0.0,0.055" threshold="0.035"/>
        <condition type="entity" target="block:" position="0.055,0.0,0.055" threshold="0.035"/>
      </condition>
      <condition type = "all">
        <condition type="entity" target="block:" position="0.0,-0.055,0.055" threshold="0.035"/>
        <condition type="entity" target="block:" position="0.0,0.055,0.055" threshold="0.035"/>
      </condition>
    <action type="terminate" delay="50"/>
    </condition>
  </loop_functions>

  <!-- *********************** -->
  <!-- * Arena configuration * -->
  <!-- *********************** -->
  <arena size="2, 2, 2" center="0, 0, 0.75">
    <box id="bn" size="0.05,1.95,0.1" movable="false" mass="10">
      <body position="0.975,0.025,0"  orientation="0,0,0" />
    </box>
    <box id="be" size="1.95,0.05,0.1" movable="false" mass="10">
      <body position="0.025,-0.975,0"  orientation="0,0,0" />
    </box>
    <box id="bs" size="0.05,1.95,0.1" movable="false" mass="10">
      <body position="-0.975,-0.025,0"  orientation="0,0,0" />
    </box>
    <box id="bw" size="1.95,0.05,0.1" movable="false" mass="10">
      <body position="-0.025,0.975,0"  orientation="0,0,0" />
    </box>
    <!-- add a fixed seed block -->
    <block id="block0" debug="false" movable="false">
      <body position="0.0,0,0" orientation="90,0,0"/>
      <controller config="block"/>
    </block>
   <block id="block1" debug="false" movable="false">
      <body position="-0.055,0,0" orientation="90,0,0"/>
      <controller config="block"/>
    </block>
   <block id="block2" debug="false" movable="false">
      <body position="0.055,0,0" orientation="90,0,0"/>
      <controller config="block"/>
    </block>
   <block id="block3" debug="false" movable="false">
      <body position="0.0,-0.055,0" orientation="90,0,0"/>
      <controller config="block"/>
    </block>
   <block id="block4" debug="false" movable="false">
      <body position="0.055,-0.055,0" orientation="90,0,0"/>
      <controller config="block"/>
    </block>
    <block id="block5" debug="false" movable="false">
      <body position="-0.055,-0.055,0" orientation="90,0,0"/>
      <controller config="block"/>
    </block>
   <block id="block6" debug="false" movable="false">
      <body position="0.0,0.055,0" orientation="90,0,0"/>
      <controller config="block"/>
    </block>
   <block id="block7" debug="false" movable="false">
      <body position="-0.055,0.055,0" orientation="90,0,0"/>
      <controller config="block"/>
   </block>
   <block id="block8" debug="false" movable="false">
      <body position="0.055,0.055,0" orientation="90,0,0"/>
      <controller config="block"/>
    </block>
 <!-- distribute free builderbots -->
    <distribute>
     <position method="uniform" min="-0.1,-0.5,0" max="0.2,-0.3,0" />
      <orientation method="uniform" min="255,0,0" max="285,0,0" />
      <entity quantity="1" max_trials="100">
        <builderbot id="builderbot0" debug="false">
          <body position="0,0,0" orientation="0,0,0"/>
          <controller config="builderbot"/>
        </builderbot>
      </entity>
    </distribute>
    <distribute>
     <position method="uniform" min="-0.1,0.3,0" max="0.2,0.5,0" />
      <orientation method="uniform" min="75,0,0" max="105,0,0" />
      <entity quantity="1" max_trials="100">
        <builderbot id="builderbot1" debug="false">
          <body position="-0,0,0" orientation="0,0,0"/>
          <controller config="builderbot"/>
        </builderbot>
      </entity>
    </distribute>
