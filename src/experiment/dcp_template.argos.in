    <distribute>
     <position method="uniform" min="0.3,-0.1,0" max="0.5,0.1,0" />
      <orientation method="uniform" min="-15,0,0" max="15,0,0" />
      <entity quantity="1" max_trials="100">
        <builderbot id="builderbot2" debug="false">
